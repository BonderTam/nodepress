{
  "name": "nodepress",
  "version": "3.0.0",
  "description": "RESTful API server application for Surmon.me blog",
  "author": {
    "name": "Surmon",
    "email": "surmon@foxmail.com",
    "url": "https://surmon.me"
  },
  "private": false,
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development nodemon",
    "start:debug": "NODE_ENV=development nodemon --config nodemon-debug.json",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "prestart:prod": "NODE_ENV=production rimraf dist && tsc",
    "build": "NODE_ENV=production tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "updatedb": "node ./node_modules/geoip-lite/scripts/updatedb.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.1",
    "@nestjs/core": "^5.4.1",
    "@nestjs/typeorm": "^5.2.2",
    "akismet-api": "^4.2.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "geoip-lite": "^1.3.5",
    "helmet": "^3.15.0",
    "hiredis": "^0.5.0",
    "js-base64": "^2.4.9",
    "jsonwebtoken": "^8.4.0",
    "marked": "^0.5.2",
    "mongoose": "^5.3.15",
    "mongoose-auto-increment": "^5.0.1",
    "mongoose-paginate": "git+ssh://git@github.com:surmon-china/mongoose-paginate.git",
    "node-schedule": "^1.3.1",
    "nodemailer": "^4.7.0",
    "qn": "^1.3.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "simple-netease-cloud-music": "^0.4.0",
    "sitemap": "^2.1.0",
    "typescript": "^3.2.2",
    "wonderful-bing-wallpaper": "^0.1.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.4.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
